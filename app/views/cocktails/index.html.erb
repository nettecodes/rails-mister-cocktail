<div class="banner-main"></div>
<div class="container">
<div class="cards">
  <% @cocktails.each do |cocktail| %>
  <%= link_to cocktail_path(cocktail) do %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= (cl_image_path cocktail.photo.key || "", height: 200, width: 300, crop: :thumb) if cocktail.photo.attached? %>');">
      <%= cocktail.name %>
    </div>
    <% end %>
  <% end %>

  </div>
</div>


</div>

